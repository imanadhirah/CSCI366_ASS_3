<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#fff">

        <TextView
            android:id="@+id/title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Original Image"
            android:textSize="20dp"/>

        <!--<TextView-->
            <!--android:id="@+id/load_image_text"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_below="@id/title1"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:layout_marginTop="100dp"-->
            <!--android:text="Tap to choose image"-->
            <!--android:textSize="24sp" />-->

        <ImageView
            android:id="@+id/uncompressed_image"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginTop="35dp"
            android:onClick="loadImage"
            android:scaleType="fitCenter"
            android:src="@drawable/no_image_icon" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="250dp"
        android:background="@color/colorPrimaryDark">

        <CheckBox
            android:id="@+id/decompress"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="200dp"
            android:text="Decompression"
            android:textColor="#fff" />

        <CheckBox
            android:id="@+id/compress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="66dp"
            android:text="Compression"
            android:textColor="#fff" />

        <Button
            android:layout_width="125dp"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:onClick="decompress"
            android:text="COMPRESS" />

        <Button
            android:layout_width="125dp"
            android:layout_height="45dp"
            android:layout_centerHorizontal="false"
            android:layout_marginTop="45dp"
            android:onClick="decompressIman"
            android:text="DECOMPRESS" />

    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_marginTop="350dp"
        android:background="#fff">

        <TextView
            android:id="@+id/title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Compressed Image"
            android:textSize="20dp"/>

        <ImageView
            android:id="@+id/compressed_image"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginTop="35dp"
            android:src="@drawable/compress" />

    </RelativeLayout>





</RelativeLayout>